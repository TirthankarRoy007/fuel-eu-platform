generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BankingRecord {
  id        String   @id @default(uuid())
  shipId    String   @map("ship_id")
  year      Int
  amount    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([shipId, year])
  @@map("banking_records")
}

model Route {
  id                     String   @id @default(uuid())
  name                   String
  is_baseline            Boolean  @default(false)
  fuelConsumptionTonnes  Float    @default(0) @map("fuel_consumption_tonnes")
  ghgIntensity           Float    @default(0) @map("ghg_intensity")
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  @@map("routes")
}

model ShipCompliance {
  id                String   @id @default(uuid())
  shipId            String   @map("ship_id")
  complianceBalance Float    @map("compliance_balance")
  year              Int
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("ship_compliance")
}

model BankEntry {
  id        String   @id @default(uuid())
  amount    Float
  type      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("bank_entries")
}

model Pool {
  id        String       @id @default(uuid())
  name      String
  members   PoolMember[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@map("pools")
}

model PoolMember {
  id        String   @id @default(uuid())
  poolId    String   @map("pool_id")
  shipId    String   @map("ship_id")
  pool      Pool     @relation(fields: [poolId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("pool_members")
}
